<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<parent>
		<groupId>org.mrobson.example</groupId>
		<artifactId>fabric8-amq</artifactId>
		<version>1.0-SNAPSHOT</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.mrobson.example.fabric8-amq</groupId>
	<artifactId>production-broker1</artifactId>
	<packaging>pom</packaging>
	<name>fabric8 AMQ :: Red Hat Broker 1 Detailed Config</name>
        <properties>
                <fabric8.profile>mq-broker-redHatBrokerNetwork.redhat-broker1</fabric8.profile>
                <fabric8.parentProfiles>mq-redhat</fabric8.parentProfiles>
		<!--fabric8.baseVersion>1.0</fabric8.baseVersion>
                <fabric8.profileVersion>1.0</fabric8.profileVersion-->
        </properties>
	<build>
		<resources>
			<resource>
				<directory>src/main/fabric8</directory>
				<filtering>true</filtering>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>io.fabric8</groupId>
				<artifactId>fabric8-maven-plugin</artifactId>
				<executions>
				    <execution>
					<id>zip</id>
					<phase>package</phase>
					<goals>
					    <goal>zip</goal>
					</goals>
				    </execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
